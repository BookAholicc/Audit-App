<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GAP Analysis - Powered by Bookaholicc</title>
    <!--Importing stylesheet-->
    <link rel = "stylesheet" type = "text/css" href = "../public/stylesheets/home.css">
    <link rel = "stylesheet" type = "text/css" href = "../public/stylesheets/animate.css">
    <!--Material design library (css and js)-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</head>
<body>
    <!--header menu and logo-->
    <div id="header">
        <div id="main">
            <div id="header-logo">
                <div>GAP Analysis</div>
                <div style="font-size: 0.7em;">Powered by</div>
                <div id="logo-img"><img src="../public/images/logo.png" alt="bookaholicc.com" width="70"></div>
            </div>
            <div id="options">
                <button class="mdl-button mdl-js-button mdl-button--accent">
                  MENU
                </button>
            </div>
            <div id="admin-user">
                <button class="mdl-button mdl-js-button mdl-button--accent">
                  ADMIN
                </button>
                <button class="mdl-button mdl-js-button mdl-button--accent">
                  USER
                </button>
            </div>
            <div id="show-list">
                <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="orgs">
                  ORGANIZATIONS
                </button>
                <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="dash">
                  DASHBOARD
                </button>
            </div>
        </div>
    </div>
    
    <!--main content-->
    <div id="content">
        <div class="welcome">
            <h1>Welcome to GAP Analysis!</h1>
            <h3>Powered by</h3>
            <img src="../public/images/logo.png" alt="bookaholicc.com" width="300px">
        </div>
        <div id="list-items">
            <!--list of organizations would go here-->
            hello
        </div>
    </div>
    
    <!--dialogs-->
    <dialog class="mdl-dialog">
        <h4 class="mdl-dialog__title">Create Organization</h4>
        <div class="mdl-dialog__content">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="orgname">
            <label class="mdl-textfield__label" for="orgname">Organization name</label>
            </div>           
        </div>
        <div class="mdl-dialog__actions">
          <button type="button" class="mdl-button">Submit</button>
          <button type="button" class="mdl-button close">Close</button>
        </div>
    </dialog>
    
    <!--Create button-->
    <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored" id="create_button">
      <i class="material-icons">add</i>
    </button>
    
    <!--script for create dialog-->
    <script>
        var dialog = document.querySelector('dialog');
        var showDialogButton = document.querySelector('#create_button');
        if (! dialog.showModal) {
          dialogPolyfill.registerDialog(dialog);
        }
        showDialogButton.addEventListener('click', function() {
          dialog.showModal();
        });
        dialog.querySelector('.close').addEventListener('click', function() {
          dialog.close();
        });
    </script>
    
    <!--jQuery imported-->
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!--JavaScript file imported-->
    <script src = "../public/scripts/home.js"></script>
</body>
</html>